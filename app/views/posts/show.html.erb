<!-- Page Header -->
<header class="masthead" style="background-image: url('http://lorempixel.com/1200/800/'); height: 28rem;">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="post-heading">
          <h1><%= @post.title %></h1>
          <h2 class="subheading"><%= @post.category.name %></h2>
          <span class="meta">Publicado por
            <a href="#"><%= @post.user.username %></a> hace
            <%= time_ago_in_words(@post.created_at) %></span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Post Content -->
<article>
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-8 px-4 mt-4">
        <div class="mx-auto mb-3">
          <p><%= markdown(@post.content) %></p>
        </div>
        <!-- Single Comment -->

        <div id="comment-list" class="list-group mx-auto mb-3">
          <%= render @post.comments.order(created_at: :asc) %>
        </div>

        <% if user_signed_in? %>
        <!-- Comments Form -->
        <div class="card my-4 mx-auto mb-3">
          <h5 class="card-header">Deja un Comentario:</h5>
          <div class="card-body">
            <%= render 'comments/form' %>
          </div>
        </div>
        <% end %>
      </div>
      <div class="d-none d-md-block col-md-4 mx-auto">
        <div class="list-group popular-post mt-5">
          <h3>Post del mismo usuario</h3>
          <% @user_posts.each do |user_post| %>
            <div class="list-group-item list-group-item-action">
              <a href="#">
                <div class="d-flex justify-content-between align-items-center">
                  <img src="http://lorempixel.com/320/427/" style="height: 100px;">
                  <h6 class="m-1"><%= user_post.title %></h6>
                </div>
              </a>
            </div>
          <% end %>
        </div>
        <div class="archive mt-5">
          <h4>Archive</h4>
          <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <a href="#">July 2018</a>
              <span>(9)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <a href="#">June 2018</a>
              <span>(39)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <a href="#">May 2018</a>
              <span>(29)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <a href="#">May 2018</a>
              <span>(29)</span>
            </li>
          </ul>
        </div>
      </div>


    </div>
  </div>
</article>

<hr>

<!-- Footer -->
<footer>
  <div class="container">
    <div class="row">
      
    </div>
  </div>
</footer>