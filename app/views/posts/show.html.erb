<!-- Page Header -->
<header class="masthead" style="background-image: url('<%= @post.image %>')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="post-heading">
          <h1><%= @post.title %></h1>
          <h2 class="subheading"><%= @post.category.name %></h2>
          <span class="meta">Posted by
            <a href="#"><%= @post.user.email %></a>
            on August 24, 2019</span>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Post Content -->
<article>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <p><%= @post.content %></p>
      </div>
    </div>
  </div>
</article>

<hr>

<!-- Footer -->
<footer>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto social-networks">
          <ul class="list-inline text-center">
            <li class="list-inline-item">
              <a href="#">
                <%= fa_stacked_icon "twitter inverse", base: "circle", class: "fa-2x" %>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="#">
                <%= fa_stacked_icon "facebook inverse", base: "circle", class: "fa-2x" %>
              </a>
            </li>
            <li class="list-inline-item">
              <a href="#">
                <%= fa_stacked_icon "github inverse", base: "circle", class: "fa-2x" %>   
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </footer>